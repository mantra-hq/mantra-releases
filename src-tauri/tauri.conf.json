{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mantra",
  "version": "0.8.0",
  "identifier": "com.gonewx.mantra",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mantra 心法",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https://asset.localhost; connect-src 'self' ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI Coding Sessions Time Machine | AI 编程会话时光机",
    "longDescription": "Replay context. Filter noise. Master the craft.  Manage your AI Coding Sessions and extract your personal coding mantras. 回放上下文，滤除噪点，掌握心法。管理你的 AI Coding 会话，提炼属于你的编程心法",
    "copyright": "© 2026 Mantra Team",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "exceptionDomain": null
    },
    "windows": {
      "certificateThumbprint": null,
      "wix": {
        "language": [
          "zh-CN",
          "en-US"
        ]
      },
      "nsis": {
        "languages": [
          "SimpChinese",
          "English"
        ],
        "displayLanguageSelector": true
      }
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://updater.mantra.gonewx.com/check/mantra-hq/mantra-releases/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJBMzFFMTM0QjUwQzdFOTIKUldTU2ZneTFOT0V4S29ObmhNajQxdHl3MUt3amVJcDlhZFNXaUZXaGZ2ZnRkcHprcSt4L3hsZXQK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
